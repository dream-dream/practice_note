# ret = get_each_ani_sum(35, 94)
# print(ret)


def get_each_ani_sum(head, foot):
    """
    一元一次方程，时间复杂度On，求鸡兔各总数
    2x+4（35-x）=94
    :param head: 总头数
    :param foot: 总脚数
    :return: 鸡有多少只，兔有多少只
    """
    for a in range(1, head + 1):
        if 2 * a + 4 * (head - a) == foot:
            return "共有{}只兔子和{}只鸡".format(a, head - a)


ret = get_each_ani_sum(35, 94)
print(ret)

# 共有23只兔子和12只鸡
